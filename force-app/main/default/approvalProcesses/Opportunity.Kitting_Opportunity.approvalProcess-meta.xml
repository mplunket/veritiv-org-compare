<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>CoreALL</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>UWWCEO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account</field>
        <field>Owner</field>
        <field>Amount</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>holly.phillips@veritivcorp.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nicole.garciduenas@veritivcorp.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request Approval for Kitting</label>
        <name>Request_Approval_for_Kitting</name>
    </approvalStep>
    <description>for approving of kitting opportunities</description>
    <emailTemplate>Specialty_Packaging_Email_Templates/Specialty_Packaging_Approval_Requested</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Kitting Opportunity - Lightning</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>3- Develop Solution,4- Propose,5- Implement</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Kitting_Approval_Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SP_Set_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Kitting_Approval_Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SP_Set_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Add_1_to_Submit_Counter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Kitting_Opportunity_Created_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Kitting_Submit_Confirmation</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SP_Set_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SP_Set_Date_Approved_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Date_when_Submit_Button_is_used3</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Initial_Submitter_s_Email</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Kitting Opportunity</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

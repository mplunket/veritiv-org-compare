<apex:page standardController="Quote__c" extensions="FieldSourcingQuotingController">
    <apex:form id="theForm">
        <apex:pageBlock >
            <apex:pageMessages />
            
            <apex:pageBlockSection columns="1">
                <apex:outputField value="{!Quote__c.Servicing_Division_Name__c}"/>
                <apex:inputField value="{!Quote__c.Primary_Merchandising_Segment__c}" required="true"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockButtons location="bottom">
            	<apex:outputPanel rendered="{!noWorkOrders}">
                	<apex:commandButton value="Send to Field Sourcing" action="{!saveAndSetStage}" reRender="theForm"/>
                </apex:outputPanel>
                <apex:commandButton value="Go Back" action="{!returnToQuote}" immediate="true"/>
                <apex:commandButton id="theButton" value="Go To Work Order" action="{!goToWorkOrder}" rendered="{!NOT(noWorkOrders)}"/>
            </apex:pageBlockButtons>
            
            <apex:inputHidden value="{!Quote__c.Quote_Stage__c}"/>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>
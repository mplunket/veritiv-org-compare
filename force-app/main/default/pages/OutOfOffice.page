<apex:page controller="OutOfOfficeController" sidebar="false" showHeader="false">
    <style>
        body {
            background-color: #cfeef8;
            font-family: Arial,Helvetica,sans-serif;
            font-size: 12px;
            margin: 0;
        }
        #datePicker {
            display: none;
        }
    </style>
    <apex:form >
        <apex:outputPanel id="statusLabel" >
            
            <apex:outputPanel id="msgs">
                <apex:pageMessages />
            </apex:outputPanel>
            
            <apex:outputLabel value="Working Status" for="workingStatus" />
            
            <apex:selectList value="{!selectedWorkingStatus}" size="1" id="workingStatus">
                <apex:actionSupport event="onchange" action="{!toggle}" reRender="statusLabel"/>
                <apex:selectOptions value="{!workingStatuses}"/>
            </apex:selectList>
            
        </apex:outputPanel>
    </apex:form>
</apex:page>
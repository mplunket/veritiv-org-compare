<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Carousel_Notify_Owner_of_Inactive_Announcement</fullName>
        <description>Carousel - Notify Owner of Inactive Announcement</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Alert_Emails/Carousel_Announcement_Inactive_Alert</template>
    </alerts>
    <fieldUpdates>
        <fullName>Deactivate_Old_Carousel_Announcement</fullName>
        <description>After an Announcement End Date has passed, uncheck the Active box</description>
        <field>Active__c</field>
        <literalValue>0</literalValue>
        <name>Deactivate Old Carousel Announcement</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Carousel - Notify Owner Announcement is Inactive</fullName>
        <active>false</active>
        <description>Deactivate expired Announcements and send an email notification to owner</description>
        <formula>AND( Active__c = TRUE, End_Date__c &gt;= TODAY() )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Carousel_Notify_Owner_of_Inactive_Announcement</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Deactivate_Old_Carousel_Announcement</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Announcement__c.End_Date__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>

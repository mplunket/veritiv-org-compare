<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Reminder_CBR_Follow_up</fullName>
        <ccEmails>salesforce@unisourcelink.com</ccEmails>
        <description>Reminder: CBR Follow up</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>CAN_Workflow_Alerts_Templates/CBR_Reminder_Follow_Up</template>
    </alerts>
    <alerts>
        <fullName>Summary_of_CBR_Notes</fullName>
        <ccEmails>salesforce@unisourcelink.com</ccEmails>
        <description>Summary of CBR Notes</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <recipients>
            <field>LastModifiedById</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>CAN_Workflow_Alerts_Templates/New_CBR_Notes</template>
    </alerts>
    <rules>
        <fullName>CBR Follow Up Reminder</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Customer_Business_Review_Notes__c.Follow_Up_Required__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Reminds user to follow up with customer 3 days after notes are logged.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Reminder_CBR_Follow_up</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Customer_Business_Review_Notes__c.Date_of_Actual_CBR_Meeting__c</offsetFromField>
            <timeLength>3</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>CBR Notes Added</fullName>
        <actions>
            <name>Summary_of_CBR_Notes</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Customer_Business_Review_Notes__c.Customer_Business_Review_Details__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Alerts PSR &amp; Manager when CBR notes are created.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>

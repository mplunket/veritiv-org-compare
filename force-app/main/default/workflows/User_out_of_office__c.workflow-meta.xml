<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Out_of_Office_Reminder</fullName>
        <description>Out of Office Reminder</description>
        <protected>false</protected>
        <recipients>
            <field>User__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Alert_Emails/OOO_Turn_Off</template>
    </alerts>
    <rules>
        <fullName>F2C - Turn Off out of Office Reminder - EOD</fullName>
        <active>false</active>
        <description>Reminds user if they have forgotten to mark themselves as back in the office.</description>
        <formula>ISPICKVAL(User__r.Working_Status__c , &quot;End of Day&quot;)</formula>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Out_of_Office_Reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>User_out_of_office__c.CreatedDate</offsetFromField>
            <timeLength>18</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>F2C - Turn Off out of Office Reminder - Meeting Lunch</fullName>
        <active>false</active>
        <description>Reminds user if they have forgotten to mark themselves as back in the office.</description>
        <formula>OR(  ISPICKVAL(User__r.Working_Status__c , &quot;Meeting&quot;),   ISPICKVAL(User__r.Working_Status__c ,&quot;Lunch&quot;),  ISPICKVAL(User__r.Working_Status__c ,&quot;Away From Desk&quot;) )</formula>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Out_of_Office_Reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>User_out_of_office__c.CreatedDate</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>F2C - Turn Off out of Office Reminder - Vacation</fullName>
        <active>false</active>
        <description>Reminds user if they have forgotten to mark themselves as back in the office.</description>
        <formula>ISPICKVAL(User__r.Working_Status__c , &quot;Vacation&quot;)</formula>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Out_of_Office_Reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>User_out_of_office__c.CreatedDate</offsetFromField>
            <timeLength>7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
